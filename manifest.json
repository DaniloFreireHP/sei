{
  "manifest_version": 2,
  "name": "SEI++",
  "short_name": "SEI++",
  "description": "SEI++: Adiciona novas funcionalidades ao Sistema Eletrônico de Informações - SEI (Requer uma versão do SEI maior ou igual a 3.0.0).",
  "version": "2.2.1",
  "author": "Jonatas Evaristo",
  "homepage_url": "https://jonatasrs.github.io/sei/",
  "icons": {"48": "icons/sei_++.png"},
  "permissions": ["storage"],

  "applications": {
    "gecko": {
      "id": "jonatas@gov",
      "strict_min_version": "52.0",
      "update_url": "https://jonatasrs.github.io/sei/updates.json"
    }
  },

  "options_ui": {
    "page": "options/options.html"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "content_scripts": [
    {
      "matches": ["*://*/sei/*", "*://*/sip/*"],
      "run_at": "document_start",
      "css": ["cs_modules/core.css"],
      "all_frames": true,
      "js": ["cs_modules/core.js", "themes/themes.js"]
    },
    {
      "matches": ["*://*/sei/*", "*://*/sip/*"],
      "css":["content_scripts.css"],
      "js": ["lib/jquery-3.2.1.min.js", "lib/jquery.tablesorter.min.js", "lib/jquery.tablesorter.widgets.min.js", "content_scripts.js"]
    },
    {
      "matches": ["*://*/sei/controlador.php?acao=documento_receber*"],
      "all_frames": true,
      "css":["content_scripts.css"],
      "js": ["lib/jquery-3.2.1.min.js", "lib/jquery.tablesorter.min.js", "lib/jquery.tablesorter.widgets.min.js", "content_scripts_cadastro.js"]
    },
    {
      "matches": ["*://*/sei/controlador.php?acao=procedimento_controlar*"],
      "js": [
        "lib/jquery-3.2.1.min.js", "lib/jquery.tablesorter.min.js", "lib/jquery.tablesorter.widgets.min.js",
        "cs_modules/procedimento_controlar.IncluirCalculoPrazos.js",
        "cs_modules/procedimento_controlar.AdicionarOrdenacao.js",
        "cs_modules/procedimento_controlar.js"
      ]
    },
    {
      "matches": ["*://*/sei/controlador.php?acao=procedimento_visualizar*"],
      "all_frames": true,
      "js": [
        "lib/jquery-3.2.1.min.js",
        "cs_modules/procedimento_visualizar.ConsultarInteressado.js",
        "cs_modules/procedimento_visualizar.AutopreencherAndamento.js",
        "cs_modules/procedimento_visualizar.js"
      ]
    },
    {
      "matches": ["*://*/sei/controlador.php?acao=arvore_visualizar*"],
      "all_frames": true,
      "js": [
        "lib/jquery-3.2.1.min.js",
        "cs_modules/arvore_visualizar.NovoDocumento.js",
        "cs_modules/arvore_visualizar.js"
      ]
    }
  ],

  "web_accessible_resources": [
    "themes/black.css",
    "themes/PontoControleCores_Anatel.css",
    "icons/iconYellow.png",
    "icons/iconBlue.png",
    "icons/iconGreen.png",
    "icons/iconRed.png",
    "icons/ect.png"
  ]
}
