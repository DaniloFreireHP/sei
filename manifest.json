{
  "manifest_version": 2,
  "name": "SEI++",
  "short_name": "SEI++",
  "description": "SEI++: Adiciona novas funcionalidades ao Sistema Eletrônico de Informações - SEI (Requer uma versão do SEI maior ou igual a 3.0.0).",
  "version": "1.5.0",
  "author": "Jonatas Evaristo",
  "homepage_url": "https://addons.mozilla.org/pt-BR/firefox/addon/sei/",
  "icons": {"48": "icons/sei_++.png"},
  "permissions": ["storage"],

  "applications": {
    "gecko": {
      "id": "jonatas@gov",
      "strict_min_version": "52.0"
    }
  },

  "options_ui": {
    "page": "options/options.html"
  },

  "content_scripts": [
    {
      "matches": ["*://*/sei/*", "*://*/sip/*"],
      "js": ["altera_tabela.js"]
    }
  ]
}
